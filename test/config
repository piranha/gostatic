# -*- mode: makefile -*-

TEMPLATES = template.tmpl
SOURCE = site
OUTPUT = out

*.md:
	config
	rename *.html
	directorify
	tags tags/*.tag
	inner-template
	markdown
	template page
	relativize

blog/index.md: blog/*.md
	config
	rename blog/index.html
	inner-template
	markdown
	template page
	relativize

index.md: blog/index.md
	config
	rename index.html
	inner-template
	markdown
	template page
	relativize

*.less:
	ext .css

*.html:
	directorify
	template page

*.tag: blog/*.md
	rename *.html
	directorify
	template tag
	markdown
	template page
	relativize
