# -*- mode: makefile -*-

TEMPLATES = template.tmpl
SOURCE = site
OUTPUT = out

blog/*.md:
	rename *.md

*.md:
	config
	ext .html
	directorify
	tags tags/*.tag
	inner-template
	markdown
	template page
	relativize

*.less:
	ext .css

*.html:
	directorify
	template page

*.tag: blog/*.md
	rename *.html
	directorify
	template tag
	markdown
	template page
	relativize
